datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Enum
enum Platform {
  NAVER
  DAUM
}

// Models
model Webtoon {
  id          String       @id
  title       String
  description String
  platform    Platform
  isFinish    Boolean
  isAdult     Boolean
  isPay       Boolean
  thumbnail   String
  url         String
  authors     Author[]     @relation(references: [id])
  genres      Genre[]      @relation(references: [code])
  collections Collection[] @relation(references: [id])
}

model Author {
  id       String    @id
  name     String
  webtoons Webtoon[] @relation(references: [id])
}

model Genre {
  code     String    @id
  name     String
  webtoons Webtoon[] @relation(references: [id])
}

model Collection {
  id          String    @id
  title       String    @unique
  description String
  webtoons    Webtoon[] @relation(references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
